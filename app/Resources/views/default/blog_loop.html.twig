{% extends 'base.html.twig' %}
{% block content %}
<div class="main">
    <div class="container">
        <div class="row-fluid">
            {% for blog in pagination %}
            <div style="margin-bottom:10%;" class="col-md-10 col-md-offset-1 card-box">
                <div class="img-container" style="background-image:url('{{ asset('images/blog/' ~ blog.imageName) }}')">
                </div>
                <div class="desc-container">
                    <h3>{{ blog.title }}</h3>
                    <p class="description">
                        {{ blog.content }}
                    </p>
                    <div class="text-right">
                    <span>posted {{blog.datePost| humanDate}} by {{blog.user.username}}</span>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination)}}
        </div>
    </div>
</div>
    
{% endblock %}
